<!-- Templates for dynamic content to be inserted into the theme's search form -->
<template id='coveoProductHeaderTemplate'>
  <li class='coveo-suggestion-header'>Products</li>
</template>

<template id='coveoSeparatorTemplate'>
  <li class='coveo-suggestion-separator'></li>
</template>

<template id='coveoQuerySuggestionHeaderTemplate'>
  <li class='coveo-suggestion-header'>Suggestions</li>
</template>

<template id='coveoProductSuggestionTemplate'>
  <li class='coveo-suggestion-item coveo-product-suggestion'>
    <div class='coveo-product-suggestion-content'>
      <div class='coveo-product-suggestion-image'>
        <img
          alt=''
          width="60"
          height="60"
        >
      </div>
      <div class='coveo-product-suggestion-info'>
        <div class='coveo-product-suggestion-title'></div>
        <div class='coveo-product-suggestion-sku'></div>
        <div class='coveo-customer-partner-number'></div>
      </div>
    </div>
  </li>
</template>

<template id='coveoQuerySuggestionTemplate'>
  <li class='coveo-suggestion-item coveo-query-suggestion'>
    <div class='coveo-query-suggestion-content'>
      <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
        <circle cx="11" cy="11" r="8"></circle>
        <line x1="21" y1="21" x2="16.65" y2="16.65"></line>
      </svg>
      <span class='coveo-query-suggestion-text'></span>
    </div>
  </li>
</template>

<template id='coveoSeeAllResultsTemplate'>
  <li class='coveo-see-all-results'>
    <a
      href='#'
      class='coveo-see-all-link'
    >
      See All Results
      <span class='coveo-arrow'>
        <svg
          xmlns='http://www.w3.org/2000/svg'
          width='24'
          height='24'
          viewBox='0 0 16 16'
        >
          <path fill="currentColor"
            d="M8.51881 4.16884L14.4527 10.1027C14.7389 10.3889 14.7389 10.8529 14.4527 11.139L13.7606 11.8311C13.4749 12.1168 13.0119 12.1174 12.7255 11.8323L8.00064 7.12965L3.27581 11.8324C2.98944 12.1174 2.52641 12.1168 2.24071 11.8311L1.54862 11.1391C1.26244 10.8529 1.26244 10.3889 1.54862 10.1027L7.48249 4.16887C7.76865 3.88268 8.23263 3.88268 8.51881 4.16884Z">
          </path>
        </svg>
      </span>
    </a>
  </li>
</template>

<template id='coveoSearchFormContentTemplate'>
  <div class='coveo-search-container'>
    <input
      type='text'
      id='coveoSearchInput'
      name='q'
      class='coveo-search-input'
      placeholder='What can we help you find?'
      autocomplete='off'
    >
    <button
      type='submit'
      id='coveoSubmitBtn'
      class='coveo-search-button'
    >
      <svg
        xmlns='http://www.w3.org/2000/svg'
        width='24'
        height='24'
        viewBox='0 0 24 24'
        fill='currentColor'
      >
        <path d="M21.7266 19.2913L17.8324 15.3971C17.6567 15.2214 17.4184 15.1237 17.1684 15.1237H16.5318C17.6098 13.7449 18.2504 12.0107 18.2504 10.1242C18.2504 5.63636 14.614 2 10.1262 2C5.63832 2 2.00195 5.63636 2.00195 10.1242C2.00195 14.612 5.63832 18.2484 10.1262 18.2484C12.0127 18.2484 13.7469 17.6079 15.1257 16.5298V17.1665C15.1257 17.4165 15.2233 17.6547 15.3991 17.8305L19.2932 21.7246C19.6604 22.0918 20.2541 22.0918 20.6173 21.7246L21.7227 20.6193C22.0898 20.2521 22.0898 19.6584 21.7266 19.2913ZM10.1262 15.1237C7.36471 15.1237 5.12665 12.8896 5.12665 10.1242C5.12665 7.36276 7.36081 5.12469 10.1262 5.12469C12.8876 5.12469 15.1257 7.35885 15.1257 10.1242C15.1257 12.8857 12.8915 15.1237 10.1262 15.1237Z" fill="currentColor"></path>
      </svg>
    </button>
    <button
      type='button'
      id='coveoClearBtn'
      class='coveo-clear-button coveo-hidden'
    >
      <svg
        fill='none'
        stroke='currentColor'
        viewBox='0 0 18 18'
        width='24'
        height='24'
      >
        <circle cx="9" cy="9" r="8.5" stroke-opacity=".2"></circle>
        <path stroke-linecap="round" stroke-linejoin="round" d="M11.83 11.83 6.172 6.17M6.229 11.885l5.544-5.77"></path>
      </svg>
    </button>
  </div>
  <ul
    id='coveoSuggestions'
    class='coveo-suggestions coveo-hidden'
  ></ul>
</template>

<style>
  .coveo-search-form {
    position: relative;
    margin: 0;
    width: 100%;
  }

  .coveo-search-container {
    display: flex;
    align-items: center;
    position: relative;
    width: 100%;
  }

  .coveo-search-input {
    flex: 1;
    padding: 10px 40px 10px 15px;
    border: 1px solid #ddd;
    border-radius: 4px;
    font-size: 14px;
    outline: none;
    color: #353535;
  }

  .coveo-search-input:focus {
    border-color: #999;
    box-shadow: 0 0 0 1px rgba(0, 0, 0, 0.1);
  }

  .coveo-search-button {
    position: absolute;
    right: 0;
    top: 50%;
    transform: translateY(-50%);
    background: none;
    border: none;
    cursor: pointer;
    padding: 0 10px;
    color: #fff;
    background-color: #5f9df7;
    height: 100%;
  }

  .coveo-clear-button {
    position: absolute;
    right: 44px;
    top: 50%;
    transform: translateY(-50%);
    background: none;
    border: none;
    cursor: pointer;
    padding: 0 10px;
    color: #353535;
  }

  .coveo-suggestions {
    position: absolute;
    z-index: 1000;
    background-color: white;
    border: 1px solid #e5e5e5;
    border-radius: 4px;
    box-shadow: 0 4px 10px rgba(0, 0, 0, 0.08);
    width: 100%;
    max-height: 80vh;
    overflow-y: auto;
    padding: 0;
    margin: 0;
    list-style: none;
    width: 100%;
    top: 100%;
    left: 0;
    margin-top: 2px;
  }

  .coveo-suggestion-header {
    padding: 20px 20px 8px 20px;
    font-size: 14px;
    font-weight: 700;
    color: #353535;
    text-transform: uppercase;
    letter-spacing: 1px;
  }

  .coveo-suggestion-separator {
    height: 1px;
    background-color: #eee;
    margin: 5px 0;
  }

  .coveo-suggestion-item {
    padding: 12px 20px;
    cursor: pointer;
    border-bottom: 1px solid #eee;
  }

  .coveo-suggestion-item:last-child {
    border-bottom: none;
  }

  .coveo-suggestion-item:hover {
    background-color: #f8f8f8;
  }

  .coveo-query-suggestion {
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
  }

  .coveo-product-suggestion-content {
    display: flex;
    align-items: center;
  }

  .coveo-product-suggestion-image {
    max-width: 60px;
    max-height: 60px;
    margin-right: 20px;
    flex-shrink: 0;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .coveo-product-suggestion-image img {
    width: 100%;
    height: 100%;
    object-fit: contain;
  }

  .coveo-product-suggestion-info {
    flex: 1;
    min-width: 0;
  }

  .coveo-product-suggestion-title {
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
    font-size: 14px;
    color: #333;
    margin-bottom: 4px;
    font-weight: normal;
  }

  .coveo-product-suggestion-sku,
  .coveo-customer-partner-number {
    color: #0066cc;
    font-size: 14px;
    font-weight: 500;
  }

  .coveo-query-suggestion-content {
    display: flex;
    align-items: center;
    gap: 10px;
  }

  .coveo-query-suggestion-content svg {
    color: #777;
    flex-shrink: 0;
  }

  .coveo-query-suggestion-text {
    font-size: 14px;
    color: #333;
  }

  .coveo-see-all-results {
    padding: 20px;
    border-top: 1px solid #eee;
  }

  .coveo-see-all-link {
    color: #1746a2;
    text-decoration: none;
    font-size: 14px;
    font-weight: 700;
    display: flex;
    align-items: center;
    justify-content: flex-end;
  }

  .coveo-arrow {
    font-weight: 700;
    display: inline-block;
    margin-left: 4px;
    transform: rotate(90deg);
  }

  .coveo-hidden {
    display: none;
  }

  .coveo-visible {
    display: block;
  }
</style>

{% schema %}
{
  "name": "t:coveo_search.name",
  "target": "head",
  "javascript": "coveo-search.js"
}
{% endschema %}
